<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/examination_home_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/examination_tittle_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:id="@+id/button_refinement"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/button_refinement_text"
                android:textSize="14sp"
                tools:ignore="ButtonStyle,NestedWeights" />

            <Button
                android:id="@+id/button_safety_engineer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="14sp"
                android:text="@string/button_safety_engineer_text"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/button_first_constructor"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="14sp"
                android:text="@string/button_first_constructor_text"
                tools:ignore="ButtonStyle" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_underline"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:orientation="horizontal"
            android:background="#CDECFF"
            >
            <ImageView
                android:id="@+id/cursor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@null" />
        </LinearLayout>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/examination_viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            >

        </androidx.viewpager.widget.ViewPager>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>